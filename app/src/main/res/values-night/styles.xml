<resources>

    <style name="AppTheme" parent="NightTheme">
        <item name="android:statusBarColor">@color/material_statusbar</item>
        <item name="android:navigationBarColor">@color/material_statusbar</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="NightTheme" parent="Theme.Material3.Dark">
        <item name="colorPrimary">@color/uicolor_text_high</item>
        <item name="colorAccent">@color/uicolor_text_high</item>
        <item name="backgroundColor">@color/black</item>
    </style>

    <style name="ClearBars" parent="AppTheme">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

    </style>

    <style name="uisearchview">
        <item name="android:textColor">@color/uisearch_textcolor</item>
        <item name="android:textColorHint">@color/uisearch_hint</item>
        <item name="android:background">@drawable/uisearchbar</item>
        <item name="android:drawableTint">@color/uisearch_icon_tint</item>
        <item name="android:paddingStart">@dimen/uisearchbar_horizontal</item>
        <item name="android:paddingEnd">@dimen/uisearchbar_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">@dimen/uisearch_drawable_padding</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="headerTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/branded_screen_theme</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="spinnerStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
